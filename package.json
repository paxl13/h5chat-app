{
  "name": "h5chat-app",
  "version": "1.0.0",
  "description": "HTML5 Chat Application with Express.js backend",
  "main": "server/index.js",
  "scripts": {
    "start": "NODE_ENV=production node server/index.js",
    "dev": "nodemon server/dev-server.js",
    "dev:standard": "nodemon server/index.js",
    "build:css": "tailwindcss -i ./src/input.css -o ./public/css/output.css --minify",
    "build": "npm run build:css",
    "build:prod": "NODE_ENV=production npm run build:css && npm run build:html",
    "build:html": "node scripts/build-html.js",
    "format": "prettier --write \"**/*.{js,json,html,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,html,css,md}\"",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.6.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "chokidar": "^3.5.3",
    "prettier": "^3.2.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "tailwindcss": "^3.4.0",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.2"
  }
}
